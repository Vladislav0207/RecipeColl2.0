<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:id="@+id/imageInfCard"
    android:layout_width="220dp"
    android:layout_height="220dp"
    app:cardCornerRadius="30dp"
    >
    <ImageView
        android:id="@+id/imageInf"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_baseline_fastfood_24" />
</androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/nameInf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imageInfCard"/>


    <TextView
        android:id="@+id/timeInf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="17sp"
        android:textStyle="italic"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/imageInfCard"
        android:layout_below="@id/nameInf"/>

    <TextView
        android:id="@+id/servingsInf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="17sp"
        android:textStyle="italic"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imageInfCard"
        android:layout_below="@id/timeInf"
        />

    <TextView
        android:id="@+id/ingredientsInf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginStart="10dp"
        android:layout_below="@id/imageInfCard"
        />

    <TextView
        android:id="@+id/instructionInf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/ingredientsInf"/>
</RelativeLayout>
</ScrollView>